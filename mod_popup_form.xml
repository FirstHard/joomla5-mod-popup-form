<?xml version="1.0" encoding="utf-8"?>
<extension type="module" method="upgrade" client="site" version="5.0">
    <name>MOD_POPUP_FORM</name>
    <version>0.6.0</version>
    <author>Volodymyr Buinov</author>
    <creationDate>2025-11-20</creationDate>
    <copyright>(c) Volodymyr Buinov</copyright>
    <license>GPL-2.0-or-later</license>
    <description>MOD_POPUP_FORM_DESC</description>

    <files>
        <filename module="mod_popup_form">mod_popup_form.php</filename>
        <filename>helper.php</filename>

        <folder>tmpl</folder>
        <folder>media</folder>
        <folder>language</folder>
        <folder>forms</folder>
    </files>

    <media destination="mod_popup_form" folder="media" />

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_popup_form.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_popup_form.sys.ini</language>

        <language tag="ru-RU">language/ru-RU/ru-RU.mod_popup_form.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.mod_popup_form.sys.ini</language>

        <language tag="kk-KZ">language/kk-KZ/kk-KZ.mod_popup_form.ini</language>
        <language tag="kk-KZ">language/kk-KZ/kk-KZ.mod_popup_form.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic" label="MOD_POPUP_FORM_FIELDSET_BASIC">

                <field name="display_mode" type="list" default="popup" label="MOD_POPUP_FORM_DISPLAY_MODE_LABEL" description="MOD_POPUP_FORM_DISPLAY_MODE_DESC">
                    <option value="popup">MOD_POPUP_FORM_DISPLAY_MODE_POPUP</option>
                    <option value="inline">MOD_POPUP_FORM_DISPLAY_MODE_INLINE</option>
                </field>

                <field name="anchor_hash" type="text" default="callback" label="MOD_POPUP_FORM_ANCHOR_HASH_LABEL" description="MOD_POPUP_FORM_ANCHOR_HASH_DESC" showon="display_mode:popup" />

                <field name="recipient_mode" type="radio" default="email" label="MOD_POPUP_FORM_RECIPIENT_MODE_LABEL" description="MOD_POPUP_FORM_RECIPIENT_MODE_DESC" layout="joomla.form.field.radio.switcher" class="btn-group btn-group-yesno">
                    <option value="email">MOD_POPUP_FORM_RECIPIENT_MODE_EMAIL</option>
                    <option value="contact">MOD_POPUP_FORM_RECIPIENT_MODE_CONTACT</option>
                </field>

                <field name="email_to" type="email" label="MOD_POPUP_FORM_EMAIL_TO_LABEL" description="MOD_POPUP_FORM_EMAIL_TO_DESC" required="true" showon="recipient_mode:email" />

                <field name="contact_id" type="modal_contact" addfieldprefix="Joomla\Component\Contact\Administrator\Field" label="MOD_POPUP_FORM_CONTACT_ID_LABEL" description="MOD_POPUP_FORM_CONTACT_ID_DESC" showon="recipient_mode:contact" />

                <field name="email_subject" type="text" label="MOD_POPUP_FORM_EMAIL_SUBJECT_LABEL" description="MOD_POPUP_FORM_EMAIL_SUBJECT_DESC" size="60" />

                <field name="intro_text" type="textarea" label="MOD_POPUP_FORM_INTRO_TEXT_LABEL" description="MOD_POPUP_FORM_INTRO_TEXT_DESC" rows="4" filter="raw" />

                <field name="intro_text_position" type="list" label="MOD_POPUP_FORM_INTRO_TEXT_POSITION_LABEL" description="MOD_POPUP_FORM_INTRO_TEXT_POSITION_DESC" default="top">
                    <option value="top">MOD_POPUP_FORM_INTRO_TEXT_POSITION_TOP</option>
                    <option value="left">MOD_POPUP_FORM_INTRO_TEXT_POSITION_LEFT</option>
                </field>

                <field name="intro_text_allow_html" type="radio" label="MOD_POPUP_FORM_INTRO_TEXT_ALLOW_HTML_LABEL" description="MOD_POPUP_FORM_INTRO_TEXT_ALLOW_HTML_DESC" default="1" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="submit_label" type="text" label="MOD_POPUP_FORM_SUBMIT_LABEL_LABEL" description="MOD_POPUP_FORM_SUBMIT_LABEL_DESC" />

                <field name="submitting_label" type="text" label="MOD_POPUP_FORM_SUBMITTING_LABEL_LABEL" description="MOD_POPUP_FORM_SUBMITTING_LABEL_DESC" />

                <field name="success_text" type="textarea" label="MOD_POPUP_FORM_SUCCESS_TEXT_LABEL" description="MOD_POPUP_FORM_SUCCESS_TEXT_DESC" rows="3" />

                <field name="captcha_plugin" type="plugins" folder="captcha" label="MOD_POPUP_FORM_CAPTCHA_PLUGIN_LABEL" description="MOD_POPUP_FORM_CAPTCHA_PLUGIN_DESC" default="" />

                <field name="form_fields" type="subform" formsource="modules/mod_popup_form/forms/fields.xml" multiple="true" label="MOD_POPUP_FORM_FIELDS_LABEL" description="MOD_POPUP_FORM_FIELDS_DESC" />
            </fieldset>

            <fieldset name="advanced" label="MOD_POPUP_FORM_FIELDSET_ADVANCED">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_LAYOUT_DESC" />
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
